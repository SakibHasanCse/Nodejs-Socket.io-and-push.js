
    <form action="/ragister" method="post">
      <div class="form-group">
        <input
          type="text"
          name="name"
          class="form-control"
          placeholder="Enter your name"
        />
      </div>
      <div class="form-group">
        <input
          type="email"
          name="email"
          class="form-control"
          placeholder="Enter your email"
        />
      </div>
      <div class="form-group">
        <input
          type="password"
          name="password"
          class="form-control"
          placeholder="Enter your password"
        />
      </div>
      <div class="form-group">
        <input
          type="file"
          name="profileimage"
          class="filepond filepond--item"
          placeholder="Profile Image"
        />
      </div>

      <button type="submit" class="btn btn primary">Sign in</button>
    </form>

    <div class="row">
      <div class="col s12 m7">
        <% users.forEach(function(img) { %>
        <div class="card">
          <div class="card-image">
            <img src="<%=img.profileimage%>" />
          </div>
          <div class="card-content">
            <h5><%= img.name %></h5>

            <p><%= img.email %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
 